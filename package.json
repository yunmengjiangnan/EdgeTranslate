        "lodash": "^4.17.20",
        "merge-stream": "^2.0.0",
        "minimist": "^1.2.5",
        "prettier": "^1.19.1",
        "querystring": "^0.2.0",
        "raw-loader": "^0.5.1",
        "webpack": "^4.44.2",
        "webpack-merge": "^4.2.2",
        "webpack-stream": "^5.2.1"
    },
    "jest": {
        "verbose": true,
        "testTimeout": 10000,
        "transform": {
            "^.+\\.[t|j]sx?$": "babel-jest",
            "\\.(css|less)$": "jest-raw-loader"
        },
        "moduleDirectories": [
            "node_modules",
            "src"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
